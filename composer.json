{
	"name": "ofce/netatmo",
	"description": "Simple PHP console application for Netatmo devices (currently Healthy home coach)",
	"require": {
		"guzzlehttp/guzzle": "^6.3",
		"nette/utils": "^3.0",
		"nette/neon": "^3.0",
		"symfony/console": "^4.2",
		"nette/schema": "^1.0"
	},
	"require-dev": {
		"php": ">=7.2",
		"phpstan/phpstan": "^0.11.7",
		"nette/tester": "^2.2",
		"phpstan/phpstan-strict-rules": "^0.11.1",
		"jakub-onderka/php-parallel-lint": "^1.0",
		"tracy/tracy": "^2.6"
	},
	"autoload": {
		"classmap": [
			"src/"
		]
	},
	"scripts": {
		"stan": "vendor/bin/phpstan analyse -l 7 -c phpstan.neon src --ansi",
		"lint": "vendor/bin/parallel-lint --colors src/"
	}
}
